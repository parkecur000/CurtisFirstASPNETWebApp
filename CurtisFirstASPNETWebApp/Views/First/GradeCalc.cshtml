@{
    ViewBag.Title = "Second Page";
    ViewBag.Header = "Grade Calculator";
}

@model GradeCalcModel
 
<body>
    <p>Input your grade percentages for each category as whole numbers</p>
    <form method="post">
        <label>Assignments</label>
        <input id="assignments" asp-for="assignments"/> <!--asp-for is used in place of the name-->
        <br />
        <label>Group Project</label>
        <input id="groupProject" asp-for="groupProject" />
        <br />
        <label>Quizzes</label>
        <input id="quizzes" asp-for="quizzes" />
        <br />
        <label>Exams</label>
        <input id="exams" asp-for="exams">
        <br />
        <label>INTEX</label>
        <input id="intex" asp-for="intex">
        <br />
        <br />
        <input type="submit" value="Submit Grades" id="submitButton" />
    </form>
    <div asp-validation-summary="All"></div>
</body>
